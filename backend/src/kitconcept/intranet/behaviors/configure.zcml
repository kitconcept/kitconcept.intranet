<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:plone="http://namespaces.plone.org/plone"
    xmlns:zcml="http://namespaces.zope.org/zcml"
    i18n_domain="kitconcept.intranet"
    >

  <include
      package="plone.behavior"
      file="meta.zcml"
      />

  <plone:behavior
      name="kitconcept.intranet.location"
      title="Location"
      description="Fields for Location"
      provides=".location.ILocationBehavior"
      />

  <plone:behavior
      name="kitconcept.intranet.organisational_unit"
      title="Organisational Unit"
      description="Fields for Organisational Unit"
      provides=".organisational_unit.IOrganisationalUnitBehavior"
      />

  <plone:behavior
      name="kitconcept.intranet.lcm"
      title="Lifecycle Management fields"
      description="Add the lifecycle management fields"
      provides=".lcm.ILCM"
      />

  <plone:behavior
      name="kitconcept.intranet.person"
      title="Intranet-specific Person fields"
      description="Add the intranet-specific person fields"
      provides=".person.IPersonBehavior"
      />

</configure>
