<?xml version="1.0" encoding="utf-8"?>
<object xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        meta_type="Dexterity FTI"
        name="Event"
        i18n:domain="plone"
>
  <property name="allow_discussion"
            purge="false"
  >True</property>

  <property name="behaviors"
            purge="false"
  >
    <!-- Remove event behaviors and then re-add them after kitconcept.intranet.location
      to ensure the location indexer is run correctly.
    -->
    <element remove="true"
             value="plone.eventbasic"
    />
    <element remove="true"
             value="plone.eventrecurrence"
    />
    <element remove="true"
             value="plone.eventattendees"
    />
    <element remove="true"
             value="plone.eventcontact"
    />
    <element remove="true"
             value="plone.eventlocation"
    />
    <element value="kitconcept.intranet.location" />
    <element value="plone.eventbasic" />
    <element value="plone.eventrecurrence" />
    <element value="plone.eventattendees" />
    <element value="plone.eventcontact" />
  </property>
</object>
